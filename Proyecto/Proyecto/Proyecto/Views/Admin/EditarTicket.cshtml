@model Proyecto.Models.Ticket

@{
    ViewData["Title"] = "Editar Ticket";
}

<h2>Editar Ticket</h2>

<form asp-action="EditarTicket" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prioridad"></label>
        <select asp-for="Prioridad" class="form-control">
            <option>Alta</option>
            <option>Media</option>
            <option>Baja</option>
        </select>
        <span asp-validation-for="Prioridad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <select asp-for="Estado" class="form-control">
            <option value="Abierto" selected="@(Model.Estado == "Abierto")">Abierto</option>
            <option value="En Proceso" selected="@(Model.Estado == "En Proceso")">En Proceso</option>
            <option value="Cerrado" selected="@(Model.Estado == "Cerrado")">Cerrado</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId"></label>
        <select asp-for="CategoriaId" class="form-control" asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Nombre"))">
            <option value="">-- Selecciona una categoría --</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="FechaCreacion" />
    <input type="hidden" asp-for="FechaActualizacion" />


    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("Tickets", "Admin")" class="btn btn-secondary mt-3">← Regresar a Mis Tickets</a>
</form>

